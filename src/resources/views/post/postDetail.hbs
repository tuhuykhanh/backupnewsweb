<section class="section">
    <div class="container-postdetail">
        <div class="post-header">
            <div class="date-create">
                <span class="left">{{post.category.name}}</span>

                <span class="right">{{post.createdAt}}</span>
            </div>
            <h2 class="title">
                {{post.title}}
            </h2>
        </div>
        <div class="post-body">
            <div class="description">
                <p>{{post.description}}</p>
            </div>
            <div class="container-image">
                <div class="image">
                    <img src="/{{post.thumbnail}}" alt="thumbnail">
                </div>
            </div>

            <div class="content">
                {{{ post.content }}}
            </div>
            <div class="contentreal">
            </div>
            <div class="author">
                <h3 class="name">By: {{post.user.username}}</h3>
            </div>

        </div>
    </div>

</section>

<section class="section">

    <div class="container-comment">

        <div class="box-title">
            <h3 class="title">Comment</h3>
        </div>

        <div class="comment-enter">

            <input class="contentcomment" type="text" contenteditable="true" name="contentcomment">

            <div class="btn-send-comment">send</div>

        </div>

        <div class="comments-box">
            {{#each comments}}
            <div class="box box-item-{{this._id}}">
                <div class="avata">
                    <img src="/{{this.iduser.avatar}}" alt="cmtuser">
                </div>

                <div class="content">

                    <div class="username">
                        <h3>{{this.iduser.username}}</h3>
                        <smal class="time">{{this.time}}</smal>
                    </div>
                    <p>{{this.content}}</p>
                    <p class="data-email">{{this.iduser.email}}</p>
                    <button value="{{this.iduser.email}}" class="controls threedos-btn" id="{{this._id}}">
                        <i class="fa-solid fa-ellipsis"></i>

                        <div class="dropdown" data-id="{{this._id}}">
                            <div onclick="deletecmt(`{{this._id}}`)" class="delete">delete</div>
                        </div>
                    </button>

                </div>


            </div>
            {{/each}}
